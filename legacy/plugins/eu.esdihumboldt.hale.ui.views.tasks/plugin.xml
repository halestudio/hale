<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="eu.esdihumboldt.hale.task.TaskProvider" name="Task providers" schema="schema/eu.esdihumboldt.hale.task.TaskProvider.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="eu.esdihumboldt.hale.ui.views.tasks.TaskTreeView"
            icon="icons/tasks.gif"
            id="eu.esdihumboldt.hale.ui.views.tasks"
            name="%view.tasks.name">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="eu.esdihumboldt.hale.ui.views.tasks.service.internal.TaskServiceFactory">
         <service
               serviceClass="eu.esdihumboldt.hale.ui.views.tasks.service.TaskService"></service>
      </serviceFactory>
   </extension>
   <extension
         point="eu.esdihumboldt.hale.task.TaskProvider">
      <tasks
            class="eu.esdihumboldt.hale.ui.views.tasks.model.providers.schema.SourceMappingTaskProvider"
            defaultEnabled="true"
            description="%tasks.sourceMappingTaskProvider.description"
            id="eu.esdihumboldt.hale.task.schema.SourceMappingTaskProvider"
            name="%tasks.sourceMappingTaskProvider.name">
      </tasks>
      <tasks
            class="eu.esdihumboldt.hale.ui.views.tasks.model.providers.schema.TargetMappingTaskProvider"
            defaultEnabled="false"
            description="%tasks.targetMappingTaskProvider.description"
            id="eu.esdihumboldt.hale.task.schema.TargetMappingTaskProvider"
            name="%tasks.targetMappingTaskProvider.name">
      </tasks>
      <tasks
            class="eu.esdihumboldt.hale.ui.views.tasks.model.providers.schema.NilAttributeTaskProvider"
            defaultEnabled="true"
            description="%tasks.nilWarningsTaskProvider.description"
            id="eu.esdihumboldt.hale.task.schema.NilAttributeTaskProvider"
            name="%tasks.nilWarningsTaskProvider.name">
      </tasks>
      <tasks
            class="eu.esdihumboldt.hale.ui.views.tasks.model.providers.schema.geometry.SchemaSetNoGeometryTaskProvider"
            defaultEnabled="true"
            id="eu.esdihumboldt.hale.task.schema.NoGeometry"
            name="%tasks.name">
      </tasks>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="eu.esdihumboldt.hale.ui.views.tasks.model.preferences.TaskPreferenceInitializer">
      </initializer>
   </extension>

</plugin>
