<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xsd,xml"
            id="eu.esdihumboldt.hale.io.xsd"
            name="XML schema"
            priority="normal">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
            <parameter
                  name="element"
                  value="{http://www.w3.org/2001/XMLSchema}schema">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension
         point="eu.esdihumboldt.hale.io.provider">
      <provider
            class="eu.esdihumboldt.hale.io.xsd.reader.XmlSchemaReader"
            id="eu.esdihumboldt.hale.io.xsd.reader"
            name="XML schema">
         <contentType
               ref="eu.esdihumboldt.hale.io.xsd">
         </contentType>
      </provider>
   </extension>
   <extension
         point="eu.esdihumboldt.hale.io.resource">
      <advisor
            class="eu.esdihumboldt.hale.io.xsd.XMLSchemaResourceAdvisor"
            id="eu.esdihumboldt.hale.io.xsd">
         <contentType
               ref="eu.esdihumboldt.hale.io.xsd">
         </contentType>
      </advisor>
   </extension>
   <extension
         point="eu.esdihumboldt.hale.schema.valueconstraint">
      <valueconstraint
            factory="eu.esdihumboldt.hale.io.xsd.reader.internal.constraint.factory.XLinkReferenceFactory"
            id="xsd.xlink"
            type="eu.esdihumboldt.hale.io.xsd.reader.internal.constraint.XLinkReference">
      </valueconstraint>
      <valueconstraint
            factory="eu.esdihumboldt.hale.io.xsd.constraint.factory.XmlAttributeFlagFactory"
            id="xsd.attribute"
            type="eu.esdihumboldt.hale.io.xsd.constraint.XmlAttributeFlag">
      </valueconstraint>
      <valueconstraint
            factory="eu.esdihumboldt.hale.io.xsd.constraint.factory.RestrictionFlagFactory"
            id="xsd.restriction"
            type="eu.esdihumboldt.hale.io.xsd.constraint.RestrictionFlag">
      </valueconstraint>
      <valueconstraint
            factory="eu.esdihumboldt.hale.io.xsd.constraint.factory.XmlMixedFlagFactory"
            id="xsd.mixed"
            type="eu.esdihumboldt.hale.io.xsd.constraint.XmlMixedFlag">
      </valueconstraint>
      <valueconstraint
            factory="eu.esdihumboldt.hale.io.xsd.reader.internal.constraint.factory.SkipGeometryValidationFactory"
            id="xsd.skip-geometry-validation"
            type="eu.esdihumboldt.hale.io.xsd.reader.internal.constraint.SkipGeometryValidation">
      </valueconstraint>
   </extension>
   <extension
         point="eu.esdihumboldt.util.groovy.sandbox">
      <allowPackage
            allowChildren="true"
            name="eu.esdihumboldt.hale.io.xsd.reader.internal">
      </allowPackage>
      <allowPackage
            allowChildren="true"
            name="eu.esdihumboldt.hale.io.xsd.model">
      </allowPackage>
   </extension>

</plugin>
