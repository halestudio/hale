            <property>
                <type>{http://www.example.org/t1/}T1</type>
                <child>a1</child>
            </property>
        </source>
        <source name="var">
            <property>
                <type>{http://www.example.org/t1/}T1</type>
                <child>b1</child>
            </property>
        </source>
        <source name="var">
            <property>
                <type>{http://www.example.org/t1/}T1</type>
                <child>c1</child>
            </property>
        </source>
        <target>
            <property>
                <type>{http://www.example.org/t2/}T2</type>
                <child>d2</child>
            </property>
        </target>
        <parameter name="pattern" value="{a1} + {b1} = {c1} ?"/>
