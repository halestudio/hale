<?xml version="1.0" encoding="UTF-8"?>
<hale-alignment>
    <cell transformation="eu.esdihumboldt.hale.align.retype">
        <source>
            <class>
                <type>{http://www.example.org/t1/}T1</type>
            </class>
        </source>
        <target>
            <class>
                <type>{http://www.example.org/t2/}T2</type>
            </class>
        </target>
    </cell>
    <cell transformation="eu.esdihumboldt.hale.align.formattedstring">
        <source name="var">
            <property>
                <type>{http://www.example.org/t1/}T1</type>
                <child>a</child>
                <child>a1</child>
            </property>
        </source>
        <source name="var">
            <property>
                <type>{http://www.example.org/t1/}T1</type>
                <child>a</child>
                <child>x</child>
                <child>x2</child>
            </property>
        </source>
        <source name="var">
            <property>
                <type>{http://www.example.org/t1/}T1</type>
                <child>a</child>
                <child>x</child>
                <child>x1</child>
            </property>
        </source>
        <target>
            <property>
                <type>{http://www.example.org/t2/}T2</type>
                <child>b</child>
                <child>bt</child>
            </property>
        </target>
        <parameter name="pattern" value="{a.a1} likes {a.x.x2} and {a.x.x1}"/>
    </cell>
</hale-alignment>
