<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
	"http://castor.org/mapping.dtd">
<mapping>
	<class name="eu.esdihumboldt.hale.common.align.io.internal.AlignmentBean" auto-complete="true">
		<map-to xml="hale-alignment" />
	
		<field name="cells" collection="collection" type="eu.esdihumboldt.hale.common.align.io.internal.CellBean">
			<bind-xml name="cell" node="element" />
		</field>
	</class>
	<class name="eu.esdihumboldt.hale.common.align.io.internal.CellBean" auto-complete="true">
		<field name="transformationIdentifier" type="string" required="true">
			<bind-xml name="transformation" node="attribute" />
		</field>
		
		<field name="source" collection="arraylist" type="eu.esdihumboldt.hale.common.align.io.internal.NamedEntityBean">
			<bind-xml name="source" node="element" />
		</field>
		
		<field name="target" collection="arraylist" type="eu.esdihumboldt.hale.common.align.io.internal.NamedEntityBean">
			<bind-xml name="target" node="element" />
		</field>
		
		<field name="transformationParameters" collection="arraylist" type="eu.esdihumboldt.hale.common.align.io.internal.ParameterValue">
			<bind-xml name="parameter" node="element" />
		</field>
	</class>
	<class name="eu.esdihumboldt.hale.common.align.io.internal.ParameterValue" auto-complete="true">
		<field name="name" type="string">
			<bind-xml name="name" node="attribute" />
		</field>
		<field name="value" type="string">
			<bind-xml name="value" node="attribute" />
		</field>
	</class>
	<class name="eu.esdihumboldt.hale.common.align.io.internal.NamedEntityBean" auto-complete="true">
		<field name="name" type="string">
			<bind-xml name="name" node="attribute" />
		</field>
		<field name="entity" type="eu.esdihumboldt.hale.common.align.io.internal.EntityBean">
			<bind-xml node="element" auto-naming="deriveByClass" />
		</field>
	</class>
	<class name="eu.esdihumboldt.hale.common.align.io.internal.EntityBean" auto-complete="true">
		<field name="typeName" type="javax.xml.namespace.QName">
			<bind-xml name="type" node="element" />
		</field>
	</class>
	<class name="eu.esdihumboldt.hale.common.align.io.internal.TypeBean" auto-complete="true"
			extends="eu.esdihumboldt.hale.common.align.io.internal.EntityBean">
		<map-to xml="class" />
	</class>
	<class name="eu.esdihumboldt.hale.common.align.io.internal.PropertyBean" auto-complete="true"
			extends="eu.esdihumboldt.hale.common.align.io.internal.EntityBean">
		<map-to xml="property" />
		
		<field name="properties" collection="arraylist" type="javax.xml.namespace.QName">
			<bind-xml name="name" node="element" />
		</field>
	</class>
	<class name="javax.xml.namespace.QName" verify-constructable="false">
		<field name="namespaceURI" type="string" set-method="%1" get-method="getNamespaceURI">
			<bind-xml name="ns" node="attribute" />
		</field>
		<field name="localPart" type="string" set-method="%2" get-method="getLocalPart">
			<bind-xml name="name" node="attribute" />
		</field>
		<field name="prefix" type="string" set-method="%3" get-method="getPrefix">
			<bind-xml name="prefix" node="attribute" />
		</field>
	</class>
</mapping>
