<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>${groupId}</groupId>
  <artifactId>${artifactId}</artifactId>
  <version>${version}</version>
  <packaging>${packaging}</packaging>
  
  <parent>
    <groupId>${parentGroupId}</groupId>
    <artifactId>${parentArtifactId}</artifactId>
    <version>${parentVersion}</version>
    <relativePath>${parentRelativePath}</relativePath>
  </parent>
  
  <properties>
	<doc.output.folder>\${project.build.directory}/gen-doc/</doc.output.folder>
  </properties>
  
  <build>
    <plugins>
      <% if (extraRequirements) { %>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>\${tycho-version}</version>
        <configuration>
	  <dependency-resolution>
	    <extraRequirements>
          <% extraRequirements.each { %>
	      <requirement>
	        <type>eclipse-plugin</type>
  	        <id>$it</id>
	        <versionRange>0.0.0</versionRange>
	      </requirement>
	      <% } %>
	    </extraRequirements>
	  </dependency-resolution>
        </configuration>
      </plugin>
      <% } %>
      <% if (isJavaProject && !needsGroovy && !needsScala) { %>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <version>\${tycho-version}</version>
        <configuration>
          <source>$javaSource</source>
          <target>$javaTarget</target>
          <excludeResources>
       		<!-- Exclude translation files (because they are very incomplete ATM) -->
       		<excludeResource>**/messages_*.properties</excludeResource>
       		<excludeResource>**/bundle_*.properties</excludeResource>
     	  </excludeResources>
        </configuration>
      </plugin>
      <% } %>
      <% if (needsScala) { %>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <version>\${tycho-version}</version>
        <configuration>
          <source>$javaSource</source>
          <target>$javaTarget</target>
          <!-- exclude scala source files; they will be compiled
               by the maven-scala-plugin (see below) and must not
               be included into the output jar -->
          <excludeResources>
            <excludeResource>**/*.scala</excludeResource>
            <!-- Exclude translation files (because they are very incomplete ATM) -->
            <excludeResource>**/messages_*.properties</excludeResource>
            <excludeResource>**/bundle_*.properties</excludeResource>
          </excludeResources>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.scala-tools</groupId>
        <artifactId>maven-scala-plugin</artifactId>
        <version>2.14</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <jvmArgs>
            <jvmArg>-Xms512m</jvmArg>
            <jvmArg>-Xmx1024m</jvmArg>
          </jvmArgs>
          <scalaVersion>\${scala.version}</scalaVersion>
        </configuration>
      </plugin>
      <% } %>
      <% if (needsGroovy) { %>
      <plugin>
         <groupId>org.eclipse.tycho</groupId>
		 <artifactId>tycho-compiler-plugin</artifactId>
		 <version>\${tycho-version}</version>
         <configuration>
           <source>$javaSource</source>
           <target>$javaTarget</target>
                <compilerId>groovy-eclipse-compiler</compilerId>
                <compilerArguments>
					<indy/><!-- optional; supported by batch 2.4.12-04+ -->
					<!-- <configScript>config.groovy</configScript> -->
				</compilerArguments>
                <verbose>true</verbose>
                <extensions>true</extensions>
                <excludeResources>
            		<excludeResource>**/*.groovy</excludeResource>
            		<!-- Exclude translation files (because they are very incomplete ATM) -->
            		<excludeResource>**/messages_*.properties</excludeResource>
            		<excludeResource>**/bundle_*.properties</excludeResource>
          		</excludeResources>
         </configuration>
         <dependencies>
            <dependency>
	        	<groupId>org.codehaus.groovy</groupId>
	        	<artifactId>groovy-eclipse-compiler</artifactId>
	        	<version>2.9.2-04</version>
	        </dependency>
	        <dependency>
	        	<groupId>org.codehaus.groovy</groupId>
	        	<artifactId>groovy-eclipse-batch</artifactId>
	        	<version>2.4.14-01</version>
	        	<!-- OLD REMARK FOR GROOVY 2.1
	        	For some reasons with the most up-to-date version
	        	the compiled Groovy is not consistent with the
	        	Groovy compiled in the Eclipse workspace.  
	        	<version>2.1.8-01</version>
	        	-->
	        </dependency>
	        <!-- dependency>
			    <groupId>org.codehaus.groovy</groupId>
			    <artifactId>groovy-all</artifactId>
			    <version>2.1.8</version>
			</dependency -->
         </dependencies>
      </plugin>
      <% } %>
      <% if (false) /*(isJavaProject)*/ { %>
      <plugin>
			<groupId>org.eclipse.tycho.extras</groupId>
			<artifactId>tycho-document-bundle-plugin</artifactId>
			<version>\${tycho-version}</version>
			<executions>
				<execution>
					<id>javadoc</id>
					<phase>generate-resources</phase>
					<goals>
						<goal>javadoc</goal>
					</goals>
		
					<configuration>
						<basedir>\${doc.output.folder}</basedir>
						<outputDirectory>\${doc.output.folder}/reference/api</outputDirectory>
						<tocFile>\${doc.output.folder}/toc/javadoc.xml</tocFile>
						<!-- javadocOptions>
							<additionalArguments>
								<additionalArgument>-linkoffline
									http://docs.oracle.com/javase/7/docs/api/
									\${basedir}/input/javase-7</additionalArgument>
								<additionalArgument>-linkoffline
									http://www.osgi.org/javadoc/r4v43/ \${basedir}/input/osgi-r4v43</additionalArgument>
							</additionalArguments>
						</javadocOptions -->
					</configuration>
				</execution>
			</executions>
		</plugin>
		<plugin> <!-- if included will conflict with definition below -->
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>tycho-packaging-plugin</artifactId>
			<version>\${tycho-version}</version>
			<configuration>
				<additionalFileSets>
					<fileSet>
						<directory>\${doc.output.folder}</directory>
						<includes>
							<include>**/*</include>
						</includes>
					</fileSet>
				</additionalFileSets>
			</configuration>
		</plugin>
		<% } %>
		<% if(hasProperty('needsTwirl') && needsTwirl) { %>
		<plugin>
			<groupId>com.jakewharton.twirl</groupId>
			<artifactId>twirl-maven-plugin</artifactId>
			<version>1.0.2</version>
			<configuration>
				<templateDirectory>\${project.basedir}/src</templateDirectory>
				<% if (twirlImports) { %>
				<imports>
					<% twirlImports.each { %>
					<import>$it</import>
					<% } %>
				</imports>
				<% } %>
			</configuration>
			<executions>
				<execution>
					<phase>generate-sources</phase>
					<goals>
						<goal>compile</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
		<% } %>
		<plugin>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>tycho-packaging-plugin</artifactId>
			<version>\${tycho-version}</version>
			<configuration>
				<forceContextQualifier>${contextQualifier}</forceContextQualifier>
			</configuration>
		</plugin>
    </plugins>
  </build>
</project>
