								<additionalArgument>-linkoffline
									http://www.osgi.org/javadoc/r4v43/ \${basedir}/input/osgi-r4v43</additionalArgument>
							</additionalArguments>
						</javadocOptions -->
					</configuration>
				</execution>
			</executions>
		</plugin>
		<plugin> <!-- if included will conflict with definition below -->
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>tycho-packaging-plugin</artifactId>
			<version>\${tycho-version}</version>
			<configuration>
				<additionalFileSets>
					<fileSet>
						<directory>\${doc.output.folder}</directory>
						<includes>
							<include>**/*</include>
						</includes>
					</fileSet>
				</additionalFileSets>
			</configuration>
		</plugin>
		<% } %>
		<% if(hasProperty('needsTwirl') && needsTwirl) { %>
		<plugin>
			<groupId>com.jakewharton.twirl</groupId>
			<artifactId>twirl-maven-plugin</artifactId>
			<version>1.2.0</version>
			<configuration>
				<templateDirectory>\${project.basedir}/src</templateDirectory>
				<% if (twirlImports) { %>
				<imports>
					<% twirlImports.each { %>
					<import>$it</import>
					<% } %>
				</imports>
				<% } %>
			</configuration>
			<executions>
				<execution>
					<phase>generate-sources</phase>
					<goals>
						<goal>compile</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
		<% } %>
		<plugin>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>tycho-packaging-plugin</artifactId>
			<version>\${tycho-version}</version>
